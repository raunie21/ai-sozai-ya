# 環境変数設定例（.env.localにコピーして使用）

# サイト設定
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=AIそざいや

# Cloudflare R2設定（本番用）
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_BUCKET=ai-sozai-ya-images
CLOUDFLARE_R2_ACCESS_KEY=your-access-key
CLOUDFLARE_R2_SECRET_KEY=your-secret-key
CLOUDFLARE_R2_PUBLIC_URL=https://your-custom-domain.com

# データベース設定（将来の拡張用）
DATABASE_URL=postgresql://username:password@localhost:5432/ai_sozai_ya

# 画像アップロード設定
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/webp

# 管理者設定
ADMIN_EMAIL=admin@ai-sozai-ya.com
ADMIN_PASSWORD=your-secure-password

# セキュリティ設定
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000
